<div class="total-offer-new">
  <h2 class="text-center my-5 text-danger">Share your <strong id="red-word">House or Apartment</strong>.</h2>

  <div class="container container-person">
    <div id="wrapper">
      <div class="row">
        <div class="text-left form-login">
          <br>
          <%= simple_form_for @offer do |f| %>
          <%= f.error_notification %>
          <%= f.input :title, label: "Title", placeholder: "Studio Apartment Downtown" %>
          <%= f.input :description, placeholder: "King size bed, large living room...", :label_html => { :class => "label-css"} %>
          <%= f.input :address, label: "My House or Apartment is located at this address", placeholder: "Avenida Paulista 123" %>
          <div class="d-flex justify-content-center">
            <%= f.input :city, placeholder: "SÃ£o Paulo", input_html: { class: "mr-4" } %>
            <%= f.input :state, priority: ["SP"], input_html: { value: "SP", disabled: true } %>
          </div>
          <%= f.input :photo, label: "Photo of the property", placeholder: "URL photo" %>
          <div class="d-flex justify-content-center">
            <%= f.input :capacity, label: "Capacity" %>
            <%= f.input :price, label: "Price per night in BRL", placeholder: "150" %>
          </div>
          <div class="d-flex justify-content-center">
            <%= f.button :submit, "Share my House/Apartment", class: "btn-submit-offer"%>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
